@model IEnumerable<prjWebApplication1.Models.Order>

@{
    ViewData["Title"] = "List";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
<link href="~/css/ForTable.css" rel="stylesheet" />
<div class="container">
    <br />
    <p style="font-size:30px" class="forp">訂單一覽表</p>
    <div class="forp">
        @using (Html.BeginForm())
        {
            @:關鍵字 @Html.TextBox("txtKeyword", "", new { @class = "form-control" }) <input type="submit" value="查詢" class="btn btn-secondary" />
        }
    </div>
    <p>
            <a asp-action="Create">新增訂單</a>
        </p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="table__heading">
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
                <th class="table__heading">
                    @Html.DisplayNameFor(model => model.OrderRemark)
                </th>
                <th class="table__heading">
                    @Html.DisplayNameFor(model => model.MemberId)
                </th>
                <th class="table__heading">
                    @Html.DisplayNameFor(model => model.OrderstatusId)
                </th>
                <th class="table__heading">
                    @Html.DisplayNameFor(model => model.RoomId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table__row">
                    <td class="table__content">
                        @Html.DisplayFor(modelItem => item.OrderId)
                    </td>
                    <td class="table__content">
                        @Html.DisplayFor(modelItem => item.OrderRemark)
                    </td>
                    <td class="table__content">
                        @Html.DisplayFor(modelItem => item.MemberId)
                    </td>
                    <td class="table__content">
                        @Html.DisplayFor(modelItem => item.OrderstatusId)
                    </td>
                    <td class="table__content">
                        @Html.DisplayFor(modelItem => item.RoomId)
                    </td>
                    <td class="table__content">
                        @Html.ActionLink("修改", "Edit", new { id = item.OrderId }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("刪除", "Delete", "Order", new { id = item.OrderId },
                        new { onclick = "return confirm('確定要刪除嗎?')", Class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

 